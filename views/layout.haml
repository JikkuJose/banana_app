%head
  %link{rel: "stylesheet", type: 'text/css', href: './semantic/dist/semantic.min.css'}
  %script{src: './semantic/dist/semantic.min.js'}
%body
  .ui.attached.stackable.menu
    .ui.container
      %a.item
        Banana App
      - if logged_in?
        %a.item.right
          %img{:src => user.photo, style: 'padding-right: 10px'}
          = user.name
      - else
        %a.item.right{href: toggle_access}
          %i.facebook.icon
          Login / Signup
  .ui.container
    = yield
